<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/card_margin"
    app:cardCornerRadius="@dimen/card_margin"
    app:cardElevation="@dimen/card_margin">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_twitter"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/tweet_ic_padding"
            android:id="@+id/tweet_icon"/>
        <TextView
            android:id="@+id/tweet_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10/10/2010"
            android:layout_toRightOf="@id/tweet_icon"
            android:padding="@dimen/tweet_ic_padding"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:layout_alignStart="@id/tweet_date"
            android:layout_alignLeft="@id/tweet_date"
            android:layout_below="@id/tweet_icon"
            android:padding="@dimen/tweet_ic_padding"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>